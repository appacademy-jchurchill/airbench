@model List<AirBench.Models.Bench>

@{
    ViewBag.Title = "Home";
}

<h2>Home</h2>

@if (Model.Count > 0)
{
    <h3>Benches</h3>

    <table class="table">
        <thead>
            <tr>
                <th>Description</th>
                <th># of Seats</th>
                <th>Lat/Long</th>
                <th>Overall Rating</th>
                <th>Posted By</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var bench in Model)
            {
                <tr>
                    <td>@bench.ShortDescription</td>
                    <td>@bench.NumberOfSeats</td>
                    <td>@bench.Latitude/@bench.Longitude</td>
                    <td>
                        @if (bench.Reviews.Count > 0)
                        {
                            @bench.AverageRating
                        }
                        else
                        {
                            <span>No ratings</span>
                        }
                    </td>
                    <td>@bench.User.DisplayName</td>
                </tr>
            }
        </tbody>
    </table>
}
